<!--component/recruit/index.wxml-->
<view class="card">
  <image class="bg-img" src="{{ bgImg }}" mode="aspectFit" />
  <image class="avatar-outline" src="{{ avatarOutline }}" mode="aspectFit" />
  <view class="avatar-container">
    <image class="avatar" src="{{ team.logo }}" mode="aspectFill" />
  </view>
  <!-- 占位 -->
  <view style="width: 220rpx; "></view>
  <view class="info">
    <view class="name">
      {{ team.name }}
    </view>
    <wxs src="./index.wxs" module="tools"/>
    <view class="num">
      招募人数：{{ tools.getEnlistMemberNum(team) }}人
    </view>
  </view>
  <van-button custom-class="btn" round bind:click="onBtnClick" data-id="{{ team.id }}">立即加入</van-button>
</view>