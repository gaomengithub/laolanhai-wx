.container {
  position: relative;
  background-color: #FFFFFF;
  border-radius: 44rpx;
  width: 702rpx;
  margin: 24rpx;

}

.card {
  position: relative;
  height: max-content;
  border-radius: 44rpx;
  margin: 12rpx 24rpx;
}


.card .item {
  position: relative;
  margin-bottom: 22rpx;
  border-radius: 22rpx;
  height: 144rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  background: linear-gradient(to right, #FAFAFA, #FFF5FA);
}

.card .item .avater {
  width: 76rpx;
  height: 76rpx;
  margin: 16rpx;
}

.card .item .content {
  width: 380rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card .item .content .name {
  font-weight: 600;

}

.card .item .content .type {
  color: #9E435F;
  position: relative;
  width: fit-content;
  z-index: 1;
}

.card .item .content .type::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background: linear-gradient(to bottom, rgba(255, 208, 230, 0.2), rgba(255, 208, 230, 1));
  z-index: -1;
}

.card .status {
  position: relative;
  color: #ffffff;
  background-color: #E6E6E6;
  padding: 5rpx;
  width: 110rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-left: 22rpx;
}

.start {
  color: #ffffff !important;
  background-color: #FB8808 !important;
}

.mid {
  color: #ffffff !important;
  background-color: #569C89 !important;
}

.end {
  color: #ffffff !important;
  background-color: #E6E6E6 !important;
}


.card .link {
  height: 35rpx;
  width: 35rpx;
  margin-left: 10rpx;
}
