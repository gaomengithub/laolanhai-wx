.container {
  position: relative;
  height: fit-content;
  background-color: #ffffff;
  border-radius: 44rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-bottom: 24rpx;
  margin-top: 24rpx;
}


.item {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: row;
  background-color: #282A37;
  border-radius: 22rpx;
}

.item .avatar {
  width: 148rpx;
  height: 167rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  margin-left: 48rpx;
  margin-right: 48rpx;
}



.item .text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 340rpx;
  color: #ffffff;
}

.item .text .name {
  font-weight: 600;
  font-size: 36rpx;
}

.item .text .intro {
  line-height: 42rpx;
  color: #A3A3A3;
}