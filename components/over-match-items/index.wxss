.avatar-item {
  margin-left: 32rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.avatar-outline {
  width: 185rpx;
  height: 185rpx;
  position: absolute;
}

.avatar-item .avatar {
  position: absolute;
  width: 65px;
  height: 65px;
  z-index: 1;
  /* border-radius: 50%; */
  clip-path: polygon(50% 0%, 90% 20%, 90% 80%, 50% 100%, 10% 80%, 10% 20%);
}