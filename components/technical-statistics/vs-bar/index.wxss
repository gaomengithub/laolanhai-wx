.box {
  display: flex;
}

.item {
  position: relative;
  width: 300rpx;
  margin: 2rpx;
}

.progress-bar {
  position: absolute;
  width: 300rpx;
  height: 12px;
}

.progress-block {
  position: relative;
  height: 24rpx;
  width: 10rpx;
  background: rgb(9, 129, 228);
}

.progress-bar-left {
  position: absolute;
  width: 300rpx;
  height: 12px;
}

.progress-block-left {
  position: relative;
  height: 24rpx;
  width: 10rpx;
  background: #CCCCCC;
}

.sub {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 302rpx;
  margin-bottom: 12rpx;
}

.start-right {
  justify-content: flex-end;
}


.avatar {
  width: 75rpx;
  height: 75rpx;
}