.container {
  position: relative;
}

.card {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 310rpx;
  width: 652rpx;
  padding: 26rpx 26rpx 16rpx 26rpx;
  margin: 24rpx;
  border-radius: 44rpx;
  background: linear-gradient(to top right, #FFFFFF, #FFFAF4)
}

.img {
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  top: 0;
  right: 0;
}

.main {
  display: flex;
  flex-direction: row;
  height: 222rpx;
}

.poster {
  width: 192rpx;
  height: 222rpx;
  border-radius: 12rpx;
}

.item {
  display: flex;
  flex-direction: column;
  width: 400rpx;
  padding: 0 30rpx;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  height: 96rpx;
  line-height: 48rpx;
  letter-spacing: 2rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.details {
  width: 358rpx;
  height: 126rpx;
  font-size: 16px;
  color: #424242;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.child {
  height: 50rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.active {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 88rpx;
}

.type {
  font-size: 30rpx;
  height: 44rpx;
  width: 120rpx;
  background-color: #FB8808;
  border-radius: 8rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  margin-left: 6rpx;
  margin-right: 24rpx;
}

.avatar-wrap {
  display: flex;
  flex-direction: row;
  width: 104rpx;
  overflow: hidden;
  white-space: nowrap;
}

.avatar {
  width: 44rpx;
  min-width: 44rpx;
  height: 44rpx;
  min-height: 44rpx;
  border-radius: 50%;
  margin-right: -10rpx;
  border: 1px solid white;
}

.btn {
  position: absolute;
  top: 0;
  right: 10rpx;
  width: 210rpx;
  font-weight: bold;
  font-size: 28rpx !important;
  height: 80rpx;
  padding: 4rpx 0;
  border-radius: 42rpx;
  background-color: #FB8808;
}

.icon {
  margin-right: 12rpx;
  height: 26rpx;
  width: 26rpx;
}

.info {
  color: #000000;
  opacity: 0.6;
  font-size: 30rpx;
  width: 166rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
}

.arena {
  position: absolute;
  background-color: #569C89;
  border-radius: 12rpx 0 12rpx 0;
  padding: 5rpx 10rpx;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}