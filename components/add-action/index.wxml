<view class="container">
  <view class="item" border="{{ false }}" bind:tap="onClick" data-path="/pages/sub/diy-match/index?pageClass=create" hover-class="hover" hover-start-time="20" hover-stay-time="70">
    <image class="icon" src="{{ diyPerson.icon }}" mode="aspectFill" />
    <view class="cell">
      <view class="title">
        {{ diyPerson.title }}
      </view>
      <view class="text">
        {{ diyPerson.text }}
      </view>
    </view>
    <image class="arrow" src="{{greyArrow}}" mode="aspectFill" />
  </view>

  <view class="item" bind:tap="onClick" data-path="/pages/to-do/index" border="{{ false }}" hover-class="hover" hover-start-time="20" hover-stay-time="70">
    <image class="icon" src="{{ diyTeam.icon }}" mode="aspectFill" />
    <view class="cell">
      <view class="title">
        {{ diyTeam.title }}
      </view>
      <view class="text">
        {{ diyTeam.text }}
      </view>
    </view>
    <image class="arrow" src="{{greyArrow}}" mode="aspectFill" />
  </view>

  <view class="item official-item" bind:tap="onClick" data-path="/pages/to-do/index" border="{{ false }}" hover-class="hover" hover-start-time="20" hover-stay-time="70">
    <image class="icon" src="{{ official.icon }}" mode="aspectFill" />
    <view class="cell">
      <view class="title official-title">
        {{ official.title }}
      </view>
      <view class="text official-text">
        {{ official.text }}
      </view>
    </view>
    <image class="arrow" src="{{blackArrow}}" mode="aspectFill" />
  </view>
  <view class="active">
    <slot></slot>
  </view>
</view>