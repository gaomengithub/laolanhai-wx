.search {
  margin-bottom: 20rpx;
  height: 128rpx;
}

.location {
  background-color: #ffffff;
  padding: 22rpx;
  margin-bottom: 22rpx;
}

.location .title {
  color: #A3A3A3;
  font-size: 24rpx;
  margin-bottom: 22rpx;
}

.location .currCity {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.city-grid {
  height: 75rpx;
  font-size: 14px;
}

.hotcity {
  background-color: #ffffff;
  padding: 22rpx;
  padding-right: 80rpx;
}

.hotcity .title {
  color: #A3A3A3;
  font-size: 24rpx;
  margin-bottom: 22rpx;
}

.searchLetter {
  position: fixed;
  top: 20%;
  right: 0;
  width: 80rpx;
  height: 70%;
  text-align: center;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  color: #000000;
  z-index: 1;
  font-size: 12px;
}


.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}



.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 80rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 32rpx;
  color: #666;
}

.item_city {
  display: flex;
  background-color: #fff;
  height: 100rpx;
  padding-left: 34rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 28rpx;
  color: rgb(65, 65, 65);
}


.ul {
  display: block;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.li {
  display: block;
  font-size: 28rpx;
  padding: 20rpx 0;
  padding-left: 34rpx;
  border-bottom: 1rpx solid #ededed;
}

.item-hover{
  background-color: #CCCCCC;
}

