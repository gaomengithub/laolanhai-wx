<nav-bar title="{{navTitle}}"></nav-bar>
<!-- 占位 -->
<view style="height:{{navBarHeight}}px;"></view>

<scroll-view scroll-y="true" style="height:100vh" scroll-into-view="{{scrollTopId}}" scroll-top="{{scrollTop}}">
  <van-search shape="round"  custom-class="search" value="{{ inputName }}" placeholder="输入城市名或拼音查询" bind:change="bindKeyInput">
  </van-search>

  <ul class="ul">
    <li wx:for="{{completeList}}" wx:key="*this" bindtap="bindCity" data-city="{{item.city}}" data-code="{{item.code}}" class="li">{{item.city}}</li>
  </ul>


  <view class="location">
    <view class="title">当前定位</view>
    <view class="currCity">
      <van-icon style="transform: translateY(7rpx);" name="location">
      </van-icon>
      <view>
        {{ city }}
      </view>
    </view>
  </view>

  <view class="hotcity">
    <view class="title">
      热门城市
    </view>
    <van-grid column-num="{{ 3 }}" gutter="{{ 10 }}" clickable>
      <van-grid-item use-slot wx:for="{{hotcityList}}" wx:key="index" custom-class="city-grid">
        {{ item }}
      </van-grid-item>
    </van-grid>
  </view>
<!-- 右侧字母 -->
  <view class="searchLetter">
    <view wx:for="{{searchLetter}}" wx:key="*this" data-letter="{{item}}" catchtouchend="clickLetter">{{item}}</view>
  </view>
  <view class="selection" wx:for="{{cityList}}" wx:key="initial">
    <view class="item_letter" id="{{item.initial}}">{{item.initial}}</view>
    <view class="item_city" hover-class="item-hover" hover-start-time="20" hover-stay-time="70" wx:for="{{item.cityInfo}}" wx:for-item="ct" wx:key="id" data-code="{{ct.code}}" data-city="{{ct.city}}" bindtap="bindCity">
      {{ct.city}}
    </view>
  </view>
</scroll-view>