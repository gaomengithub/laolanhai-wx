.bar {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.bar .child {
  background-color: #eeeeee;
  margin: 32rpx 12rpx;
  padding: 12rpx;
  border-radius: 12rpx;
  font-size: 34rpx;

}

.checked {
  background-color: #FB8808 !important;
}

.active {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-top: 16rpx;
  background-color: #ffffff;
  height: 166rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.1);
}

.resetBtn {
  border-radius: 44rpx !important;
  width: 166rpx;
  font-size: 32rpx !important;
  letter-spacing: 4rpx;
}

.confirmBtn {
  width: 322rpx;
  border-radius: 44rpx !important;
  background-color: #FB8808 !important;
  color: #ffffff !important;
  font-size: 32rpx !important;
  letter-spacing: 4rpx;
}

.van-calendar__day--end,
.van-calendar__day--multiple-middle,
.van-calendar__day--multiple-selected,
.van-calendar__day--start,
.van-calendar__day--start-end {
  --calendar-range-edge-background-color: #FB8808
}