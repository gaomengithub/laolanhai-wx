/* pages/desc/index.wxss */

.image-container {
  position: relative;
  width: 100vw; /* 或者其他你需要的宽度 */
  height: 70vh; /* 或者其他你需要的高度 */
}

.main-img{
  width: 100vw; /* 或者其他你需要的宽度 */
  height: 70vh; /* 或者其他你需要的高度 */
}

.gradient-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60%; /* 覆盖图片的下半部分，可根据需要调整 */
  background: -webkit-linear-gradient(
    top, 
    rgba(88, 88, 88, 0.1) 0%, 
    rgba(88, 88, 88, 0.8) 30%,
    rgb(66, 66, 66) 100%
    ); /* 渐变效果，从透明到黑色，可根据需要调整 */
}
.info-container{
  position: absolute;
  top: 30vh;
  height: 30vh;
  display: flex;
  flex-direction: column;
  margin-left: 32px;
  margin-right: 32px;
}
.info-container .type{
  font-size: 1.5rem;
  font-weight: 600;
}
.info-container .title{
  color: #ffffff;
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 15px;
}
.info-container .date-address{
  background-color: rgb(36, 36, 36);
  border-radius: 22px;
  padding: 16px;
  color: #fff;
  font-weight: 600;
  font-size: 1rem;
  margin-bottom: 15px;
}
.info-container .date-address .child {
  display: flex;
  flex-direction: row;
  padding: 5px;
}
.info-container .part {
  background-color: rgb(36, 36, 36);
  border-radius: 22px;
  padding: 16px;
}
.info-container .part .title{
  font-size: 1rem;
  color: gray;
}
.info-container .part .avatar {
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
  border: 1px,solid,#fff;
  margin-right: 8px;
}

.desc{
  position: relative;
  background-color: #ffffff;
  border-radius: 22px;
  top: -22px;
  padding: 22px;
}
.desc .title{
  font-size: 1.5rem;
  font-weight: 700;
  width: fit-content;
  background: -webkit-linear-gradient(
    top, 
    rgba(230, 115, 9, 0) 0%, 
    rgba(230, 115, 9, 0) 50%,
    rgb(230, 115, 9, 1) 100%
    ); /* 渐变效果，从透明到黑色，可根据需要调整 */
}
.desc .content{
  font-size: 1.2rem;
}
.active{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 55px;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
}

.btn-custom-class .van-button__text {
  color: orange;
  font-size: 1rem;
  font-weight: 700;
}