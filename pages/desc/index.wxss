/* pages/desc/index.wxss */

.up {
  position: relative;
  height: 582rpx;
  /* width: 750rpx; */
  background-image: url("http://ryt5dzeq0.hn-bkt.clouddn.com/%E6%B5%B7%E6%8A%A5.png");
  background-size: cover;
  background-repeat: no-repeat;

}

.gradient-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 582rpx;
  width: 750rpx;
  padding-left: 44rpx;
  padding-right: 44rpx;
  background-image: url("http://ryt5dzeq0.hn-bkt.clouddn.com/dev/background/bg-mask.svg");
}

.up .type {
  width: 180rpx;
  height: 100rpx;
  margin-top: 200rpx;
}

.up .title {
  color: #ffffff;
  font-size: 64rpx;
  font-weight: 600;
  margin-bottom: 15px;
  width: 634rpx;
}

.mid {
  position: relative;
  height: 500rpx;
  background-color: #636363;
  padding-left: 44rpx;
  padding-right: 44rpx;
}

.mid .date-address {
  background-color: rgb(36, 36, 36);
  border-radius: 44rpx;
  color: #fff;
  font-weight: 600;
  font-size: 32rpx;
  margin-bottom: 15px;
  height: 188rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  padding-left: 25rpx;
}

.mid .date-address .cell {
  display: flex;
  flex-direction: row;
  padding: 5px;
  height: 44rpx;
  align-items: center;
}
.mid .date-address .cell .child{
  height: 32rpx;
  width: 32rpx;
  margin-right: 20rpx;
}


.mid .part {
  background-color: rgb(36, 36, 36);
  border-radius: 22px;
  padding: 16px;
}

.mid .part .title {
  font-size: 1rem;
  color: gray;
}

.part .avatar {
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
  border: 1px, solid, #fff;
  margin-right: 8px;
}

.desc {
  position: relative;
  background-color: #ffffff;
  border-radius: 22px;
  top: -22px;
  padding: 22px;
}

.desc .title {
  font-size: 1.5rem;
  font-weight: 700;
  width: fit-content;
  background: -webkit-linear-gradient(top,
      rgba(230, 115, 9, 0) 0%,
      rgba(230, 115, 9, 0) 50%,
      rgb(230, 115, 9, 1) 100%);
  /* 渐变效果，从透明到黑色，可根据需要调整 */
}

.desc .content {
  font-size: 1.2rem;
}

.active {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 55px;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
}

.btn-custom-class .van-button__text {
  color: orange;
  font-size: 1rem;
  font-weight: 700;
}