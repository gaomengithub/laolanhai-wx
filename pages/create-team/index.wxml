<nav-bar title="{{navTitle}}"></nav-bar>
<view style="height:{{navBarHeight}}px;"></view>
<view class="container">
  <van-uploader file-list="{{ fileList }}" bind:after-read="afterRead" max-count="1">
  </van-uploader>
  <van-field model:value="{{ name }}" placeholder="请填写球队简介" bind:change="onChange" data-key="name">
    <view slot="label">球队名称</view>
  </van-field>
  <van-field class="field-input-class" model:value="{{ desc }}" type="textarea" autosize="{{autoSize}}" placeholder="我们的老年篮球队是由一群热爱篮球运动的老人组成的。虽然我们的年龄不同，但是我们都有一颗想要锻炼身体、结交朋友、展示自己的热情。">
    <view slot="label">球队简介</view>
  </van-field>
  <van-cell icon="location" model:value="{{ currArea }}" readonly title="所在地区" bind:click="onDisplay" data-show="showAreaCascader" />
  <van-popup show="{{ showAreaCascader }}" round position="bottom" custom-style="height: 50%" bind:close="onClose" data-show="showAreaCascader">
    <van-cascader wx:if="{{ showAreaCascader }}" value="{{ currArea }}" title="请选择所在地区" options="{{ options }}" active-color="#ee0a24" bind:close="onClose" data-show="showAreaCascader" bind:finish="onFinishAreaCascader" />
  </van-popup>

  <van-field left-icon="wap-home" model:value="{{ address }}" input-align="right" placeholder="主要活动位置" type="number">
    <view slot="label">主要活动位置</view>
  </van-field>
</view>