/**index.wxss**/

.top-img {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-end;
  height: 25vh;
  background-image: url('http://ryt5dzeq0.hn-bkt.clouddn.com/main-img-background.jpg');
  background-size: cover;
}

.top-img .sticker {
  margin-left: 5vw;
  width: 40vw;
}

.top-img .slogan {
  color: #fff;
  margin-left: 5vw;
  margin-bottom: 5vh;
}

.content-hot{
  height: max-content !important;
}
.tabs {
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  height: 192rpx;
  padding-bottom: 10rpx;
  background-color: #ffffff;
}

.tab {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx 20rpx;
  color: #888;
}

.tab .title{
  font-size: 36rpx;
  font-weight: 600;
}

.tab.active {
  color: #000;
  border-bottom: 20.5rpx solid #FB8808;
}




.loading {
  height: calc(env(safe-area-inset-bottom) + 55px + 55px);
  display: flex;
  flex-direction: row;
  justify-content: center;
}




