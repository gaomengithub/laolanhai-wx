<page-meta page-style="{{ showPopup ? 'overflow: hidden;' : '' }}">
  <nav-bar title="老蓝孩俱乐部"></nav-bar>
  <wxs src="./index.wxs" module="tools" />

  <view class="contanier">
    <swiper circular indicator-dots indicator-color="#FFFFFF" style="height: {{swiperHeight}};" bindchange="swiperChange">
      <swiper-item>
        <image class="swiper-img" style="height: {{swiperImgHeight}};" src="{{match.banner_attachments || ''}}" mode="aspectFill" />
      </swiper-item>
      <swiper-item>
        <image class="swiper-img" style="height: {{swiperImgHeight}};" src="{{match.attachments}}" mode="aspectFill" />
      </swiper-item>
    </swiper>

    <view class="sub-container">
      <image class="star-icon" src="{{ icon.star }}" mode="aspectFill" />
      <view class="cost-tip">
        {{match.price}}
      </view>

      <view class="mask">
        <image class="type" src="{{ icon.type }}" mode="widthFix"></image>
        <view class="name">
          {{match.name}}
        </view>
      </view>

      <view class="mid">
        <view class="date-address">
          <view class="cell">
            <image class=".child" src="{{icon.clock}}" mode="scaleToFill"> </image>
            {{ tools.formatStartTime(match.start_time) }}
          </view>
          <view class="cell">
            <image class=".child" src="{{icon.location}}" mode="scaleToFill"></image>
            {{ tools.formatLocation(match.location)}}
          </view>
        </view>
        <view class="part">
          <view class="title">已参加的人员</view>
          <view class="avatars">
            <image class='avatar' wx:for="{{match.users}}" wx:key="index" src="{{ item.avatar }}" />
            <image class='avatar' wx:for="{{match.teams}}" wx:key="index" src="{{ item.avatar }}" />
          </view>
        </view>
      </view>
      <view class="desc">
        <view class="title">
          详情内容
        </view>
        <view class="age">
          <view> 最大年龄：{{ match.age_group_end }}</view>
          <view> 最小年龄：{{ match.age_group_start }}</view>
        </view>
        <text class="content" user-select>
          {{ match.description }}
        </text>
      </view>
    </view>
    <logo-bar />

  </view>

  <bottom-btn-bar name="{{ tools.isEnterMatch(match.users,id) }}" btnBgColor="#000000" textColor="#FB8808" bind:handleButtonClick="onJoinBtn">

    <view wx:if="{{ match.organizer == id }}">
      <image class="edit" src="{{ icon.edit }}" mode="aspectFill" bind:tap="onDisplay" data-show="show" />
    </view>

  </bottom-btn-bar>
</page-meta>
<van-action-sheet cancel-text="取消" bind:cancel="onDisplay" show="{{ show }}" actions="{{ actions }}" bind:close="onDisplay" bind:select="onSelect" data-show="show"/>


<van-popup show="{{ showPopup }}" round data-show="showPopup" bind:close="onDisplay">
  <van-radio-group value="{{ radio }}" bind:change="onChange">
    <van-cell-group custom-class="cell-items" >
      <van-cell  title="报名中" clickable data-name="1" bind:click="onChange" title-class="cell-title">
        <van-radio  slot="right-icon" name="1" />
      </van-cell>
      <van-cell title="报名结束" clickable data-name="2" bind:click="onChange" title-class="cell-title">
        <van-radio slot="right-icon" name="2" />
      </van-cell>
      <van-cell title="比赛中" clickable data-name="3" bind:click="onChange" title-class="cell-title">
        <van-radio slot="right-icon" name="3" />
      </van-cell>
      <van-cell title="比赛结束" clickable data-name="4" bind:click="onChange" title-class="cell-title">
        <van-radio slot="right-icon" name="4" />
      </van-cell>
      <van-cell title="取消比赛" border="{{ false }}" clickable data-name="5" bind:click="onChange" title-class="cell-title">
        <van-radio slot="right-icon" name="5" />
      </van-cell>
    </van-cell-group>
  </van-radio-group>
  <van-button block custom-class="btn" bind:click="handleClick">确定</van-button>
</van-popup>