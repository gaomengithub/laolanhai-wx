<van-dialog use-slot show="{{ show }}" show-cancel-button bind:close="onClose" width="654rpx" bind:confirm="handleRecord">
  <view class="dialog-container">

    <image class="avatar" src="{{ currAvatar }}" mode="aspectFit"></image>
    <view class="name">{{ currName }}</view>
    <van-radio-group value="{{ radio }}" bind:change="onRadioChange">
      <view class="grid">
        <view class="cell miss">
          <van-radio name="2">罚球未命中</van-radio>
        </view>
