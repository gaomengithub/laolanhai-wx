page {
  background-color: #ffffff;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 22px;
}

.upload-icon {
  width: 170rpx;
  height: 174rpx;
  border-radius: 24rpx;
}

.field-icon {
  width: 52rpx;
  height: 52rpx;
  margin-right: 10rpx;
}

.title {
  font-size: 32rpx;
}

.input-container{
  margin-top: 60rpx;
}

.active {
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  height: 166rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  z-index: 1;
  box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.1);
  /* 添加此行来产生阴影 */
}

.btn-custom-class {
  margin-top: 16rpx;
  width: 650rpx;
  background-color: #FB8808 !important;
  font-weight: 600;
}

.van-cell{
  display: flex;
  flex-direction: row;
  align-items: center;
  min-height: 100rpx !important;
}