
.top {
  position: relative;
  height: 582rpx;
  width: 100%;
}

.gradient-mask {
  position: absolute;
  top: 0;
  height: 582rpx;
  width: 100%;
  padding-left: 40rpx;
  padding-right: 40rpx;
  background: linear-gradient(to top , rgba(99,99,99,1),rgba(99,99,99,0));
}
.top .img{
  height: 582rpx;
  width: 100%;
}

.top .type {
  width: 180rpx;
  height: 100rpx;
  margin-top: 282rpx;
}

.top .name {
  color: #ffffff;
  font-size: 64rpx;
  font-weight: 600;
  width: 634rpx;
}

.mid {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 425rpx;
  width: 100%;
  justify-content: space-between;
  padding-top: 44rpx;
  padding-bottom: 88rpx;
  background-color: rgba(99, 99, 99,1);
}

.mid .date-address {
  background-color: rgba(0, 0, 0,0.4);
  border-radius: 44rpx;
  color: #fff;
  font-weight: 600;
  font-size: 32rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 188rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  padding-left: 25rpx;
}

.mid .date-address .cell {
  display: flex;
  flex-direction: row;
  padding: 5px;
  height: 44rpx;
  align-items: center;
}

.mid .date-address .cell .child {
  height: 32rpx;
  width: 32rpx;
  margin-right: 20rpx;
}


.mid .part {
  background-color: rgba(0, 0, 0,0.4);
  border-radius: 44rpx;
  max-height: 200rpx;
  padding: 16px;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.mid .part .title {
  font-size: 30rpx;
  color: #FFFFFF;
  opacity: 0.6;
}

.part .avatars {
  width: 600rpx;
  height: 72rpx;
  padding-top: 22rpx;
  overflow: hidden;
}

.part .avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  border: 4rpx, solid, #fff;
  margin-right: 8px;
}

.desc {
  position: relative;
  background-color: #ffffff;
  border-radius: 22px;
  top: -22px;
  padding: 22px;
}

.desc .title {
  font-size: 36rpx;
  font-weight: 700;
  width: fit-content;
  background: -webkit-linear-gradient(top,
      rgba(230, 115, 9, 0) 0%,
      rgba(230, 115, 9, 0) 50%,
      rgb(230, 115, 9, 1) 100%);
  /* 渐变效果，从透明到黑色，可根据需要调整 */
}

.desc .content {
  font-size: 36rpx;
}

.desc .age {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.active {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 166rpx;
  background: white;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  /* padding-bottom: env(safe-area-inset-bottom); */
}

.btn-custom-class {
  margin-top: 16rpx;
  color: #FB8808 !important;
  font-size: 36rpx;
  font-weight: 600;
  width: 650rpx !important;
  background-color: #000000 !important;
  border-radius: 60rpx !important;
}