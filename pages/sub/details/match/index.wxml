<nav-bar title="{{navTitle}}"></nav-bar>
<!-- <view style="height:{{navBarHeight}}px;"></view> -->
<van-dialog use-slot show="{{ showDialog }}" bind:confirm="onDialogConfirmBtn" theme="round-button" custom-class="dialog" confirm-button-class="confirm-btn" use-title-slot>
  <icon class="tip-icon" type="{{dialogIconType}}" size="120rpx" />
  <view class="msg">{{ dialogMsg }}</view>
</van-dialog>
<view class="top">
  <image class="img" src="{{ match.attachments }}" mode="aspectFit"></image>
  <view class="gradient-mask">
    <image class="type" src="{{ typeUrl }}" mode="widthFix"></image>
    <view class="name">
      {{match.name}}
    </view>
  </view>
</view>
<view class="mid">
  <view class="date-address">
    <view class="cell">
      <image class=".child" src="{{clockUrl}}" mode="scaleToFill"> </image>
      {{ match.start_time }}
    </view>
    <view class="cell">
      <image class=".child" src="{{locationUrl}}" mode="scaleToFill"></image>
      {{match.location}}
    </view>
  </view>
  <view class="part">
    <view class="title">已参加的人员</view>
    <view class="avatars">
      <image class='avatar' wx:for="{{match.users}}" wx:key="*this" src="{{ item.avatar }}" />
      <image class='avatar' wx:for="{{match.teams}}" wx:key="*this" src="{{ item.avatar }}" />
    </view>
  </view>
</view>
<view class="desc">
  <view class="title">
    详情内容
  </view>
  <view class="age">
    <view> 最大年龄：{{ match.age_group_end }}</view>
    <view> 最小年龄：{{ match.age_group_start }}</view>
  </view>
  <text class="content" user-select>
    {{ match.description }}
  </text>
</view>

<!-- 占位 -->
<view style="height: 166rpx;"></view>
<view class="active">
  <van-button custom-class="btn-custom-class" bind:click='onJoinBtn'>立即报名</van-button>
</view>