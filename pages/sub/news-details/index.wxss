.banner {
  position: relative;
  width: 100%;
  height: 433rpx;
  background-image: url('https://openstore.obabyball.com/ui_v1/img/news-details-poster-compress.jpg');
  background-size: cover;
  background-repeat: no-repeat;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: -1;
}

.title {
  width: 650rpx;
  color: #ffffff;
  text-align: center;
  font-weight: 600;
  font-size: 65rpx;
  letter-spacing: 4rpx;
  margin-bottom: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.date {
  color: #ffffff;
  padding: 10rpx 28rpx;
  border: 5rpx solid #ffffff;
  border-radius: 44rpx;
}



.container {
  margin: -44rpx 44rpx 0 44rpx;
  border-radius: 44rpx;
  background-color: #FFFFFF;
  padding: 22rpx;
  box-shadow: 0 0 50px rgba(0, 0, 0, 0.1);
}

.edit {
  bottom: 50rpx;
  right: 50rpx;
  position: fixed;
  width: 80rpx;
  height: 80rpx;
}