
.top {
  height: 320rpx;
  width: 100%;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.top .img {
  position: relative;
  width: 620rpx;
  height: 114rpx;
  margin-bottom: 22rpx;
}

.container {
  background-color: #EBEBEB;
  padding: 24rpx;
  border-top-left-radius: 44rpx;
  border-top-right-radius: 44rpx;
  position: relative;
  top: -44rpx;
  
}

.user {
  position: relative;
  height: 180rpx;
  display: flex;
  flex-direction: row;
}

.user .avatar {
  width: 204rpx;
  height: 204rpx;
  position: relative;
  top: -60rpx;
  background-color: #ffffff;
  border-radius: 50%;
  right: -44rpx;
}

.user .name {
  position: relative;
  right: -80rpx;
  font-size: 40rpx;
  font-weight: 600;
  margin-top: 10rpx;
}



.active-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 22px;
  background-color: white;
  position: relative;
  justify-content: space-around;
  height: 180rpx;
  margin-bottom: 24rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
}

.active-card .text {
  font-size: 32rpx;
  margin-top: 10rpx;
  color: #A3A3A3;
}

.score {
  margin-bottom: 24rpx;
}

.joined-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 22px;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 16px;
  background-color: white;
  position: relative;
  justify-content: space-around;
  height: 10vh;
}

.joined-card .title {
  position: absolute;
  top: 10px;
  left: 20px;
  z-index: 1;
}

.joined-card .title::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%;
  /* 修改这里的百分比，可以控制背景颜色覆盖的比例 */
  background-color: orange;
  z-index: -1;
}

.close-icon {
  width: 128rpx;
  height: 128rpx;
}

.popup {
  width: 95% !important;
}