/* pages/mine/index.wxss */

.top{
  height: 350rpx;
  width: 100%;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.top .img{
  width: 620rpx;
  height: 114rpx;
  margin-bottom: 22rpx;
}

.user{
  height: 202rpx;
  width: 100%;
  background-color: #ffffff;
  border-top-left-radius: 44rpx;
  border-top-right-radius: 44rpx;
  position: relative;
  top: -44rpx;
  display: flex;
  flex-direction: row;
}

.user .avatar{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  top: -60rpx;
  background-color: #ffffff;
  border-radius: 50%;
  right: -44rpx;
}

.user .name{
  position: relative;
  right: -80rpx;
  font-size: 40rpx;
  font-weight: 600;
  margin-top: 10rpx;
}


.data-card{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 22px;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 16px;
  background-color: white;
  position: relative;
  justify-content: flex-end;
  height: 15vh;
}
.data-card .title{
  position: absolute;
  top: 10px;
  left: 20px;
  z-index: 1;
}

.data-card .title::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%; /* 修改这里的百分比，可以控制背景颜色覆盖的比例 */
  background-color: orange;
  z-index: -1;
}


.data-card .data {
  width: 100%;
  font-weight: 700;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.data-card .data .cell{
  display: flex;
  flex-direction: column;
  text-align: center;
  height: 10vh;
  justify-content: space-around;
}
.data-card .data .cell .tag{
  color: gray;
}

