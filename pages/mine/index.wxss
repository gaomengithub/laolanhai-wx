.top {
  height: 320rpx;
  width: 100%;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.top .img {
  position: relative;
  width: 620rpx;
  height: 114rpx;
  margin-bottom: 22rpx;
}

.container {
  background-color: #EBEBEB;
  padding: 24rpx;
  border-top-left-radius: 22rpx;
  border-top-right-radius: 22rpx;
  position: relative;
  top: -22rpx;

}

.user {
  position: relative;
  height: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.user .avatar {
  width: 180rpx;
  height: 180rpx;
  border: 4rpx solid #ffffff;
  position: relative;
  top: -90rpx;
  background-color: #ffffff;
  border-radius: 50%;
  margin-left: 44rpx;
}

.user .name {
  font-size: 40rpx;
  font-weight: 600;
  max-width: 332rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 44rpx;
}

.user .edit {
  width: 55rpx;
  height: 55rpx;
  margin-left: 10rpx;
}

.active-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 22px;
  background-color: white;
  position: relative;
  justify-content: space-around;
  height: 180rpx;
  margin-bottom: 24rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
}

.active-card .text {
  font-size: 32rpx;
  margin-top: 16rpx;
  color: #A3A3A3;
}

.score {
  margin-bottom: 24rpx;
}

.close-icon {
  width: 128rpx;
  height: 128rpx;
}

.popup {
  width: 95% !important;
}

.cell {
  display: flex;
  flex-direction: column;
  align-items: center;
}