.data-card{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 22px;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 16px;
  background-color: white;
  position: relative;
  justify-content: flex-end;
  height: 15vh;
}
.data-card .title{
  position: absolute;
  top: 10px;
  left: 20px;
  z-index: 1;
}

.data-card .title::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%; /* 修改这里的百分比，可以控制背景颜色覆盖的比例 */
  background-color: orange;
  z-index: -1;
}


.data-card .data {
  width: 100%;
  font-weight: 700;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.data-card .data .cell{
  display: flex;
  flex-direction: column;
  text-align: center;
  height: 10vh;
  justify-content: space-around;
}
.data-card .data .cell .tag{
  color: gray;
}

