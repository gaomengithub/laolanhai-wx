page{
  background-color: #EBEBEB;
}


.head {
  position: relative;
  height: 360rpx;
  width: 100%;
  background-color: #000000;
}

.img {
  width: 654rpx;
  margin: 128rpx 48rpx 0 48rpx;
  height: 114rpx;
}

.container {
  position: relative;
}

.sub-container {
  position: relative;
  background-color: #EBEBEB;
  padding: 85rpx 0 0 0;
}

.react {
  position: absolute;
  top: -100rpx;
  width: 100%;
  height: 146rpx;
}


.user {
  position: absolute;
  top: -120rpx;
  width: 702rpx;
  display: flex;
  flex-direction: row;
  align-items: center;

  margin: 0 24rpx;
}

.item {
  max-width: 332rpx;
  margin-left: 22rpx;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border: 4rpx solid #ffffff;
  position: relative;
  background-color: #ffffff;
  border-radius: 50%;
  margin-left: 44rpx;
}

.name {
  font-size: 40rpx;
  font-weight: 600;
  width: 332rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.about {
  color: #A3A3A3;
  font-weight: lighter;
  font-size: 30rpx;
  width: 332rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.edit {
  width: 55rpx;
  height: 55rpx;
  margin-left: 10rpx;
}

.active-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 22px;
  background-color: white;
  position: relative;
  justify-content: space-around;
  height: 180rpx;
  margin-bottom: 24rpx;
  width: 702rpx;
  margin: 0 24rpx;

}

.icon {
  width: 75rpx;
  height: 75rpx;
}

.active-card .text {
  font-size: 32rpx;
  margin-top: 16rpx;
  color: #A3A3A3;
}

.score {
  position: relative;
}

.close-icon {
  margin: 32rpx 0;
  width: 88rpx;
  height: 88rpx;
}

.popup {
  width: 95% !important;
}

.cell {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 234rpx;
}

.title {
  font-size: 34rpx;
}