<view class="top">
  <image class="img" src="{{ lightImg }}" mode="aspectFill" />
</view>

<view class="container">
  <view class="user">
    <image class="avatar" src="http://ryt5dzeq0.hn-bkt.clouddn.com/dev/icon/ball-for-user.svg" mode="scaleToFill" />
    <view class="name">
      {{nickName}}
    </view>
  </view>
  <score-card></score-card>
  <view class="active-card">
    <view class="cell">
    <image class="icon" src="{{ teamIcon }}" mode="aspectFill"/>
    <view class="text">
      战队
    </view>
    </view>
    <view class="cell">
      <image class="icon" src="{{ applyIcon }}" mode="aspectFill"/>
      <view class="text">
        申请
      </view>
    </view>
    <view class="cell">
      <image class="icon" src="{{ inIcon }}" mode="aspectFill"/>
      <view class="text">
        入驻
      </view>
    </view>
  </view>
  <joined-card />
</view>
