<nav-bar title="{{navTitle}}"></nav-bar>
<!-- <view style="height:{{navBarHeight}}px;"></view> -->

<view class="container">
  <auth-show expect="yes45" id="team-card">
    <view class="title">我的球队</view>
    <swiper class="team-swiper" indicator-dots="{{ true }}">
      <swiper-item wx:for="{{teamCards}}" wx:key="index">
        <team-card team="{{item}}">
          <navigator url="/pages/sub/details/team/index?id={{ item.id }}" open-type="navigate">
            <view class="active">
              球队详情
            </view>
          </navigator>
        </team-card>
      </swiper-item>
    </swiper>
  </auth-show>


  <view class="list">
    <view class="title">球队列表</view>
    
    <auth-show expect="no45" id="team-list">
      <view class="tip">
        您还没有加入球队，请选择球队加入
      </view>
    </auth-show>
    <enlist-card wx:for="{{teamList}}" wx:key="index" team="{{item}}"></enlist-card>
  </view>
</view>
