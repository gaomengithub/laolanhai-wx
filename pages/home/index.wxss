
.banner-img {
  width: 100%;
}
.container{
  position: relative;
  /* top: -44rpx; */
}
.content-hot,
.content-official,
.content-unofficial {
  height: 100vh !important;
  background-color: #EBEBEB;
}

.tabs {
  display: flex;
  align-items: flex-start;
  justify-content: space-around;
  height: 150rpx;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  background-color: #ffffff;
  /* border-top-left-radius: 44rpx !important;
  border-top-right-radius: 44rpx !important; */
}

.tab {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx 20rpx;
  color: #888;
}

.tab .title {
  font-size: 36rpx;
  font-weight: 600;
  z-index: 1;
}

.tab.active {
  color: #000;
  position: relative;
  /* border-bottom: 20.5rpx solid #FB8808; */
}

.tab.active .bb {
  height: 22.5rpx;
  width: 70%;
  background-color: #FB8808;
  transform: rotate(-18.72deg);
  position: absolute;
  bottom: 11.5rpx;
}


.tab-icon {
  width: 75rpx;
  height: 75rpx;
}

