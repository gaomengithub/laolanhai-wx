.banner {
  width: 100%;
}

.container {
  position: relative;
  background-color: #EBEBEB;
  min-height: 66vh;
}

.tabs {
  display: flex;
  align-items: flex-start;
  justify-content: space-around;
  height: 144rpx;
  padding-bottom: 16rpx;
  background-color: #ffffff;
}

.tab {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx 20rpx;
  color: #888;
}

.tab .title {
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  z-index: 1;
}

.tab.active {
  color: #000000;
}

.line {
  height: 22rpx;
  width: 70%;
  background-color: #FB8808;
  transform: rotate(-18deg);
  position: absolute;
  bottom: 11.5rpx;
}

.icon {
  width: 70rpx;
  height: 70rpx;
}

.loading-skeleton {
  margin-top: 44rpx;
}

.tip {
  font-size: 36rpx;
  text-align: center;
  margin-top: 250rpx;
}