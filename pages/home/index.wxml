<nav-bar wx:if="{{showNarBar}}" title="{{navTitle}}"></nav-bar>
<image class="banner-img" src="{{bannerImg}}" mode="widthFix" />
<view class="container">
  <van-sticky offset-top="{{ offsetTop }}" bind:scroll="showNarBar">
    <view class="tabs">
      <view wx:for="{{tabs}}" wx:key="index" class="tab {{activeTab===index?'active':''}}" bindtap="switchTab" data-index="{{index}}">
        <image class="tab-icon" src="{{ tabIcon[index] }}"></image>
        <view class="title">
          {{item}}
        </view>
        <view class="bb" wx:if="{{ activeTab === index }}"></view>
      </view>
    </view>
    <view class="filter">
      <navigator class="cell" url="/libs/city-selector/index">
        <view class="child">{{currCity}}</view>
        <image class="icon" src="{{arrowIcon}}" />
      </navigator>
      <navigator class="cell" url="/libs/calendar/index">
        <view class="child">{{currDate}}</view>
        <image class="icon" src="{{arrowIcon}}" />
      </navigator>
      <navigator url="/pages/search/index">
      <van-button custom-class="search">
        <image class="search" src="{{ searchIcon }}"></image>
      </van-button>
    </navigator>
    </view>
  </van-sticky>
  <swiper  current="{{activeTab}}" id="auto-swiper" style="height: {{swiperHeight}}; background-color: #EBEBEB;" bindchange="swiperChange">
    <swiper-item class="content-hot">
      <match-card wx:for="{{matchList}}" wx:key="index" name="{{ item.name }}" img="{{item.banner_attachments}}" date="{{item.start_time}}" location="{{ item.location }}" matchID="{{item.id}}" matchType="{{item.match_type}}" status="{{item.status}}" users="{{ item.users }}" teams="{{ item.teams }}"></match-card>
    </swiper-item>
    <swiper-item class="content-official">
      <unwork></unwork>
    </swiper-item>
    <swiper-item class="content-unofficial">
      <match-card wx:for="{{unofficialMatchList}}" wx:key="index" name="{{ item.name }}" img="{{item.banner_attachments}}" date="{{item.start_time}}" location="{{ item.location }}" matchID="{{item.id}}" matchType="{{item.match_type}}" status="{{item.status}}"></match-card>
    </swiper-item>
  </swiper>
</view>