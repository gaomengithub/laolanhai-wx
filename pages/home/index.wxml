<nav-bar wx:if="{{ showNarBar }}" title="{{ navTitle }}"></nav-bar>

<image class="banner" src="{{ banner }}" mode="widthFix" />

<view class="container">
  <van-sticky offset-top="{{ offsetTop }}" bind:scroll="showNarBar">
    <view class="tabs">
      <view wx:for="{{ tabs }}" wx:key="index" class="tab {{ active == index ? 'active':'' }}" bindtap="switchTab" data-index="{{index}}">
        <image class="icon" src="{{ item.icon }}"></image>
        <view class="title">{{ item.title }} </view>
        <view class="line" wx:if="{{ active == index }}"></view>
      </view>
    </view>
    <!-- <filter-bar /> -->
  </van-sticky>
  <swiper current="{{ active }}" id="auto-swiper" style="height: {{ swiperHeight }}; background-color: #EBEBEB;" bindchange="swiperChange">
    <swiper-item class="hot">
      <diy-matches-items></diy-matches-items>
    </swiper-item>
    <swiper-item class="official">

    </swiper-item>
    <swiper-item class="diy">

    </swiper-item>
  </swiper>
</view>