<nav-bar wx:if="{{showNarBar}}" title="{{navTitle}}"></nav-bar>
<image class="banner-img" src="{{bannerImg}}" mode="widthFix" />
<view class="container">
  <van-sticky offset-top="{{ offsetTop }}" bind:scroll="showNarBar">
    <view class="tabs">
      <view wx:for="{{tabs}}" wx:key="index" class="tab {{activeTab===index?'active':''}}" bindtap="switchTab" data-index="{{index}}">
        <image class="tab-icon" src="{{ tabIcon[index] }}"></image>
        <view class="title">
          {{item}}
        </view>
        <view class="line" wx:if="{{ activeTab === index }}"></view>
      </view>
    </view>
    <filter-bar />
  </van-sticky>
  <swiper current="{{activeTab}}" id="auto-swiper" style="height: {{swiperHeight}}; background-color: #EBEBEB;" bindchange="swiperChange">
    <van-skeleton custom-class="loading-skeleton" title row="16" loading="{{ loading }}" />
    <swiper-item class="content-hot">
      <view class="tip" wx:if="{{ matchList == [] }}">
      暂时没有数据
      </view>
      <block wx:else>
      <match-card wx:for="{{matchList}}" wx:key="index" match="{{ item }}"></match-card>
      </block>
    </swiper-item>
    <swiper-item class="content-official">
      <unwork></unwork>
    </swiper-item>
    <swiper-item class="content-diy">
      <view class="tip" wx:if="{{ diyMatchList == [] }}">
      暂时没有数据
      </view>
      <block wx:else>
        <match-card wx:for="{{diyMatchList}}" wx:key="index" match="{{ item }}"></match-card>
      </block>
    </swiper-item>
  </swiper>
</view>