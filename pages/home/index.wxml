<nav-bar wx:if="{{showNarBar}}" title="{{navTitle}}"></nav-bar>
<view>
  <view class="top-img">
    <image class="sticker" src="http://ryt5dzeq0.hn-bkt.clouddn.com/main-img-font.png" mode="widthFix" />
    <text class="slogan">老年热血 | 当打之年 | 快乐至上</text>
  </view>

  <van-sticky offset-top="{{ offsetTop }}" bind:scroll="showNarBar">
    <view class="tabs">
      <view wx:for="{{tabs}}" wx:key="index" class="tab {{activeTab===index?'active':''}}" bindtap="switchTab" data-index="{{index}}">
        <image class="tab-icon" src="{{ tabIcon[index] }}"></image>
        <view class="title">
          {{item}}
        </view>
        <view class="bb" wx:if="{{ activeTab === index }}"></view>
      </view>
    </view>
    <view class="filter">
      <navigator class="cell" url="/libs/city-selector/index">
      <view class="child">{{currCity}}</view>
      <image class="icon" src="http://ryt5dzeq0.hn-bkt.clouddn.com/dev/icon/icons8-arrow-100.png" />
      </navigator>

      <navigator class="cell" url="/libs/city-selector/index">
      <view class="child">全部时间</view>
      <image class="icon" src="http://ryt5dzeq0.hn-bkt.clouddn.com/dev/icon/icons8-arrow-100.png" />
      </navigator>
      <van-button custom-class="search">
        <image class="search" src="{{ searchIcon }}"></image>
      </van-button>
    </view>
  </van-sticky>
  <swiper current="{{activeTab}}" id="auto-swiper" style="height: {{swiperHeight}};">
    <swiper-item class="content-hot">
      <match-card wx:for="{{matchList}}" wx:key="index" title="{{ item.title }}" img="{{item.img}}" date="{{item.date}}"address="{{ item.address }}" matchID="{{item.id}}" matchType = "{{item.matchType}}" status ="{{item.status}}" num = "{{item.num}}"></match-card>
    </swiper-item>
    <swiper-item class="content-official">
      <unwork></unwork>
    </swiper-item>
    <swiper-item class="content-unofficial">
      <match-card wx:for="{{unofficialMatchList}}" wx:key="index" title="{{ item.title }}" img="{{item.img}}" date="{{item.date}}"address="{{ item.address }}" matchID="{{item.id}}" matchType = "{{item.matchType}}" status ="{{item.status}}" num = "{{item.num}}"></match-card>
    </swiper-item>
  </swiper>

</view>


