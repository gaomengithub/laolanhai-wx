.container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 32rpx;
}

.item {
  height: 180rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-bottom: 20rpx;
  width: 686rpx;
  background-color: #000000;
  border-radius: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.cell {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 75%;
}

.title {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: 600;
}

.text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6)
}

.icon {
  margin: 32rpx;
  width: 52rpx;
  height: 52rpx;
  border: 5rpx solid #ffffff;
  border-radius: 50%;
}

.arrow {
  height: 32rpx;
  width: 32rpx;
}



.official-item {
  background-color: #FB8808;

}

.official-title {
  color: #000000 !important;
}

.official-text {
  color: #222222 !important;
}