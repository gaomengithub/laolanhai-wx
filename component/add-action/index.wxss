.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx;
}

.item {
  height: 150rpx;
  width: 680rpx;
  margin-bottom: 24rpx;
  background-color: #000000;
  border-radius: 16rpx;
}

.nav {
  display: flex;
  flex-direction: row;
}

.title {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: 600;
}

.icon {
  width: 52rpx;
  height: 52rpx;
  border: 5rpx solid #ffffff;
  border-radius: 50%;
  margin-right: 16rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.official-item {
  background-color: #FB8808;

}

.official-text {
  color: #000000 !important;
}