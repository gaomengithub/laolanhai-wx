.card {
  display: flex;
  flex-direction: column;
  border-radius: 44rpx;
  margin: 24rpx;
  height: 310rpx;
  padding: 26rpx;
  position: relative;
}

.official {
  background: linear-gradient(to top right, #569C89, #359D8D);
}

.diy {
  background: linear-gradient(to top right, #FFFFFF, #FFFAF4);
}

.card .item {
  display: flex;
  height: 222rpx;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  margin-bottom: 18rpx;
}

.card .item .poster {
  width: 182rpx;
  height: 222rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
}

.card .item .bg-img {
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  top: 0;
  right: 0;
}

.card .item .desc {
  width: 428rpx;
  display: flex;
  flex-direction: column;
}

.card .item .desc .name {
  font-size: 36rpx;
  font-weight: 600;
  height: 96rpx;
  line-height: 48rpx;
  width: 428rpx;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card .item .desc .content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 16px;
  color: #424242;
}

.card .item .desc .content .child {
  margin-bottom: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  width: 428rpx;
  text-overflow: ellipsis;
}

.card .active {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 18rpx;
}

.active .status {
  font-size: 24rpx;
  height: 44rpx;
  width: 100rpx;
  background-color: #FB8808;
  border-radius: 8rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  margin-left: 6rpx;
}

.avatar-wrap {
  display: flex;
  flex-direction: row;
  margin-left: 20px;
  width: 104rpx;
}

.avatar {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  border: 1px solid white;
}

.btn {
  position: absolute;
  top: -20rpx;
  right: 10rpx;
  width: 210rpx;
  font-weight: 600;
  height: 80rpx;
  border-radius: 42rpx;
  background-color: #FB8808;
}

.icon {
  margin-right: 12rpx;
  height: 26.3rpx;
  width: 26.3rpx;

}

.info {
  color: #000000;
  opacity: 0.6;
  font-size: 28rpx;
  width: 146rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
}