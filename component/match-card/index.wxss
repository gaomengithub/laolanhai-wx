/* component/official-game-card/index.wxss */
.card {
  display: flex;
  flex-direction: column;
  border-radius: 44rpx;
  margin: 24rpx;
  height: 338rpx;
  padding: 24rpx;
  position: relative;
}



.official {
  background-image: url("http://ryt5dzeq0.hn-bkt.clouddn.com/dev/background/card-background.svg");
  background-size: cover;
  background-repeat: no-repeat;
}

.unofficial {
  background-image: url("http://ryt5dzeq0.hn-bkt.clouddn.com/dev/background/unofficial-background-img.svg");
  background-size: cover;
  background-repeat: no-repeat;
}

.card .item {
  display: flex;
  height: 222rpx;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  margin-bottom: 24rpx;
}

.card .item .poster-img {
  width: 188rpx;
  height: 222rpx;
  border-radius: 12rpx;
}

.card .item .bg-img {
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  top: 0;
  right: 0;
}

.card .item .desc {
  width: 514rpx;
  display: flex;
  flex-direction: column;
  padding-left: 16px;
}

.card .item .desc .name {
  font-size: 18px;
  font-weight: 600;
  height: 96rpx;
  width: 400rpx;
  margin-bottom: 24rpx;
  letter-spacing: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card .item .desc .content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 16px;
  color: #424242;
}

.card .item .desc .content .child {
  margin-bottom: 10rpx;
  overflow: hidden;
}

.card .active {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 32rpx;
}

.active .status {
  font-size: 24rpx;
  height: 44rpx;
  width: 100rpx;
  background-color: #FB8808;
  border-radius: 8rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}

.avatar-wrap {
  display: flex;
  flex-direction: row;
  margin-left: 20px;
  width: 104rpx;
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  /* 这个值可以根据需要调整 */
  border: 1px solid white;
  /* 加上白色描边 */
}

.btn {
  position: absolute;
  top: -20rpx;
  right: 10rpx;
  width: 210rpx;
  font-weight: 600;
  height: 80rpx;
  border-radius: 42rpx;
  background-color: #FB8808;
}

.icon {
  margin-right: 12rpx;
  height: 26.3rpx;
  width: 26.3rpx;

}

.reg-info {
  color: #000000;
  opacity: 0.6;
  font-size: 28rpx;
  width: 146rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
}