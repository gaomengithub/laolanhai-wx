<view class="card {{typeClass}}">
  <view class="item">
    <image class="poster-img" src="{{img}}" mode="aspectFill" />
    <image class="bg-img" src="{{backgroundImageUrl}}" mode="scaleToFill" />
    <view class="desc">
      <view class="name">{{name}}</view>
      <view class="content">
        <view class="child">
          <image class="icon" src="{{iconUrl.clock}}" mode="scaleToFill" />
          {{ formatedDate }}
        </view>
        <view class="child">
          <image class="icon" src="{{iconUrl.address}}" mode="scaleToFill" />
          {{ location }}
        </view>
      </view>
    </view>
  </view>
  <view class="active">
    <view class="status">{{ ["报名中", "进行中", "已结束"][status] }}</view>
    <view class="avatar-wrap">
      <image class='avatar' wx:for="{{avatarUrl}}" src='{{item}}' wx:key="index" />
    </view>
    <text wx:if="{{matchType == 3}}" class="reg-info">{{joinNum}}人已报名</text>
    <text wx:else class="reg-info">{{joinNum}}队已报名</text>
    <van-button custom-class="btn" bind:click="onJoinBtn">立即加入</van-button>
  </view>
</view>