.card {
  display: flex;
  flex-direction: column;
  border-radius: 22px;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 16px;
  position: relative;
  border-radius: 22px;
  background-color: #ffffff;
}

.card .up {
  height: 180px;
  width: 100%;
  background-image: url(http://ryt5dzeq0.hn-bkt.clouddn.com/%E8%BF%90%E5%8A%A8%E8%B5%9B%E4%BA%8B%E5%AE%A3%E4%BC%A0%E5%85%AC%E4%BC%97%E5%8F%B7%E9%A6%96%E5%9B%BE.jpg);
  background-size: cover;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  position: relative;
  border-top-left-radius: 22px;
  border-top-right-radius: 22px;
  background-size: contain;
}

.card .up .active {
  position: relative;
  display: flex;
  flex-direction: row;
  height: fit-content;
  align-items: center;
  color: #ffffff;
  padding: 16px;
  background: -webkit-linear-gradient(top,
      rgba(88, 88, 88, 0.1) 0%,
      rgba(88, 88, 88, 0.8) 30%,
      rgb(66, 66, 66) 100%);
  /* 渐变效果，从透明到黑色，可根据需要调整 */
}

.card .up .active .title {
  font-size: 1.3rem;
  font-weight: 600;
}

.card .up .active .btn {
  position: absolute;
  right: 10px;
}

.btn-custom-class {
  height: 2.2rem;
  width: 100px;
  font-weight: 700;
  background-color: orange;
  border: 0;
}

.card .down {
  padding: 8px;
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}

.card .down .avatar {
  width: 80px;
  height: 80px;
  clip-path: polygon(50% 0%, 90% 20%, 90% 80%, 50% 100%, 10% 80%, 10% 20%);
  margin-right: 25px;
}

.card .down .panel {
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  flex: 1
}

.card .down .panel .name {
  position: relative;
  font-size: 1.2rem;
  font-weight: 600;
  width: fit-content;
  z-index: 1;
}

.card .down .panel .name::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40%;
  /* 修改这里的百分比，可以控制背景颜色覆盖的比例 */
  background-color: orange;
  z-index: -1;
}

.card .down .panel .data {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.card .down .panel .data .cell {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.card .down .panel .data .cell .num {
  font-weight: 600;
  font-size: 1.5rem;
}