.tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 188rpx;
  background: white;
  display: flex;
  /* padding-bottom: env(safe-area-inset-bottom); */
  box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.1);
  /* 添加此行来产生阴影 */
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  margin-top: 24rpx;
}

.tab-bar-item .icon {
  width: 55rpx;
  height: 55rpx;
}

.tab-bar-item .name {
  margin-top: 10rpx;
  font-size: 28rpx;
}

.circle-outside {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 155rpx;
  height: 155rpx;
  top: -75rpx;
  background: #ffffff;
  border-radius: 50%;
}

.circle-outside .img {
  height: 150rpx;
  width: 150rpx;
}

.close-icon {
  width: 70rpx;
  height: 70rpx;
}