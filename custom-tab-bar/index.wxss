.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 166rpx;
  background: white;
  display: flex;
  /* padding-bottom: env(safe-area-inset-bottom); */
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.1);
  /* 添加此行来产生阴影 */
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  margin-top: 24rpx;
}

.circle-outside {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 75px;
  height: 75px;
  top: -66rpx;
  background: #ffffff;
  border-radius: 405%;
}

.circle-outside .img {
  height: 150rpx;
  width: 150rpx;
}

.close-icon {
  width: 100rpx;
  height: 100rpx;
}